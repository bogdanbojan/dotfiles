set mbox_type=Maildir
set folder=~/Mail/icloud
set spoolfile=+Inbox
set record="+Sent Messages"
set postponed=+Drafts
set trash="+Trash"
set from="hello@bogdanbojan.com"
set realname="Bogdan Bojan"
set sendmail="/usr/bin/msmtp"
set header_cache=~/.cache/neomutt/headers
set use_from=yes
set envelope_from=yes
set edit_headers=yes
set charset="utf-8"
set fast_reply=yes
set include=yes

# Auto-limit Inbox to messages with hello@bogdanbojan.com in To or Cc
folder-hook +Inbox 'push <limit>~t hello@bogdanbojan.com | ~c hello@bogdanbojan.com<enter>'

macro index,pager <F6> "<limit>~t hello@bogdanbojan.com | ~c hello@bogdanbojan.com<enter>" "Limit to hello"
macro index,pager <F7> "<limit>all<enter>" "Show all"

# mbsync -V icloud

